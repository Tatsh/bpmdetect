<component type="desktop-application">
  <id>sh.tat.@CMAKE_PROJECT_NAME@</id>

  <name>BPM Detect</name>
  <summary>@CMAKE_PROJECT_DESCRIPTION@</summary>

  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>
      Decode with ffmpeg, use SoundTouch&apos;s BPM library for detecting BPMs and write detected
      BPMs to metadata of the decoded files. Adjust the BPM as needed with a built-in player.</p>
    <p>Supports detection with any audio format that ffmpeg can read.</p>
  </description>

  <launchable type="desktop-id">sh.tat.@CMAKE_PROJECT_NAME@.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/Tatsh/bpmdetect/master/screenshot1.png</image>
      <caption>Main UI.</caption>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/Tatsh/bpmdetect/master/screenshot2.png</image>
      <caption>Testing and adjusting a BPM.</caption>
    </screenshot>
  </screenshots>

  <developer id="sh.tat">
    <name>Andrew Udvare</name>
  </developer>

